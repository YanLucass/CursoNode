<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/toughts/add" class="btn">Criar pensamentos</a>
    </div>
    
    <h3>Seus pensamentos</h3>

     {{#if empytToughts}}
        <p>Você ainda não possui nenhum pensamento, comece a criar <a href="/toughts/add">aqui</a></p>
    {{/if}}
    <ul>
        {{#each toughts}}
       <li>
            <span class="label">{{this.title}}</span>
            <span class="label">{{this.content}}</span>
            <span class="actions">
                <a href="/toughts/edit/{{this.id}}" class="btn">Editar</a>
                <form action="/toughts/delete" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="submit" value="Excluir" class="btn">
                </form>
            </span>
       </li>
       {{/each}}
    </ul>
   
</div>